root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4

[*.{c,h,C,H,cpp,hpp,cxx,hxx,cc,hh,CC,HH,asm,s,S,ld}]
indent_size = 4
